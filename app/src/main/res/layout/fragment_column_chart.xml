<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="lecho.lib.hellocharts.samples.ColumnChartActivity$PlaceholderFragment" >

    <TableRow
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:fitsSystemWindows="true"
        android:weightSum="1">

        <ImageView
            android:id="@+id/Rect1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/rect1"/>

        <TextView
            android:id="@+id/rssi_55"
            android:text="> -55dBm"
            android:textColor="#ffffff"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="1dp" />

        <ImageView
            android:id="@+id/Rect2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/rect2"
            android:layout_marginLeft="12dp" />

        <TextView
            android:id="@+id/rssi_65"
            android:text="> -65dBm"
            android:textColor="#ffffff"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="1dp" />

        <ImageView
            android:id="@+id/Rect3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/rect3"
            android:layout_marginLeft="12dp" />

        <TextView
            android:id="@+id/rssi_80"
            android:text="> -80dBm"
            android:textColor="#ffffff"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="1dp" />
    </TableRow>

    <lecho.lib.hellocharts.view.ColumnChartView
        android:id="@+id/chart"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </lecho.lib.hellocharts.view.ColumnChartView>

</RelativeLayout>