<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dip" >

    <TextView
        android:id="@+id/tvserialno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom ="10dip"
        android:text="1"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/tvsizechannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_marginRight="43dp"
        android:layout_marginEnd="43dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tvClarity"
        android:layout_toStartOf="@+id/tvClarity" />

    <ImageView
        android:id="@+id/ivprogressbar"
        android:layout_width="100dip"
        android:layout_height="30dip"
        android:adjustViewBounds="true"
        android:src="@drawable/pbar2"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tvsizechannel"
        android:layout_toStartOf="@+id/tvsizechannel"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/tvClarity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom ="10dip"
        android:text="Average"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>